{
  "compilerOptions": {
    "target": "es2015",                     
    "module": "es2020",                     
    "declaration": true,                   
    "sourceMap": true,                     
    "outDir": "./dist",   
    "rootDir": "src",                
    "removeComments": true,                
    "strict": true,                         
    "moduleResolution": "node",          
    "baseUrl": "./",                       
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}